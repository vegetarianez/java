<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>AnswerServlet</servlet-name>
        <servlet-class>servlets.AnswerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionServlet</servlet-name>
        <servlet-class>servlets.QuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionServlet</servlet-name>
        <servlet-class>servlets.SessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SurveyServlet</servlet-name>
        <servlet-class>servlets.SurveyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAnswerServlet</servlet-name>
        <servlet-class>servlets.UserAnswerServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>AnswerServlet</servlet-name>
        <url-pattern>/answers/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/questions/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionServlet</servlet-name>
        <url-pattern>/sessions/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SurveyServlet</servlet-name>
        <url-pattern>/surveys/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAnswerServlet</servlet-name>
        <url-pattern>/user-answers/*</url-pattern>
    </servlet-mapping>

</web-app>